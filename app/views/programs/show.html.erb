<h1>Program: <%= @program.name %></h1>

<div class='row'>
  <div class='col-md-6'>
    <table class='table'>
      <tr>
        <td>Capacity:</td>
        <td><%= program_capacity(@program) %></td>
      </tr>
      <tr>
        <td>Age Range:</td>
        <td><%= @program.minimum_age %> - <%= @program.maximum_age %></td>
      </tr>
      <tr>
        <td colspan=2><%= link_to "Edit", edit_program_path(@program) %></td>
      </tr>
    </table>
  </div>
</div>
